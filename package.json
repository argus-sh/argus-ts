{
  "name": "argus-ts",
  "version": "1.1.0",
  "description": "A minimal, type-safe, and elegant CLI framework for Node",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/argus-sh/argus-ts"
  },
  "keywords": [
    "cli",
    "command-line"
  ],
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./testing": {
      "types": "./dist/src/testing/index.d.ts",
      "import": "./dist/src/testing/index.js",
      "default": "./dist/src/testing/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "check": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "example:base": "tsx examples/base-cli.ts",
    "example:validator": "tsx examples/validator-mvp.ts",
    "example:sub": "tsx examples/subcommands.ts",
    "example:mw": "tsx examples/middleware.ts",
    "example:spinners": "tsx examples/spinners.ts"
  },
  "devDependencies": {
    "@types/node": "^22.5.2",
    "rimraf": "^5.0.10",
    "@vitest/coverage-v8": "^2.1.9",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}